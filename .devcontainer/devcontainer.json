{
    "name": "Redis Containers",
    "dockerFile": "Dockerfile",

    "containerUser": "vscode",

    "features": {
        //Az CLI install
        "azure-cli": {
          "version":"latest"
        },

        //Azure Function Core tools + Visual Studio Extension install
        "ghcr.io/jlaundry/devcontainer-features/azure-functions-core-tools:1":{},

        //Node + npm install
        "ghcr.io/devcontainers/features/node:1.3.0": {},

        //Terraform + tflint install
        "ghcr.io/devcontainers/features/terraform:latest":{ 
          "version":"latest",
          "tflint":"latest"
      }
    },

    //PORT Forward config : 
    //5076 : Asp Net Core HTTPS Debug port 
    //7071 : Azure Function Debug port    
    "forwardPorts": [5076, 7071],

    //Static Web App Cli Install
    "postCreateCommand": "npm install -g @azure/static-web-apps-cli",

    //Restore dotnet packages to accelerate Build / Debug
    "postStartCommand": "cd /src/catalog-api && dotnet restore && cd /src/functions",

    "customizations": {
      // Configure properties specific to VS Code.
      "vscode": {
        // Add the IDs of extensions you want installed when the container is created.
        "extensions": [
          "ms-dotnettools.csharp", 
          "ms-vscode.vscode-node-azure-pack",
          "humao.rest-client"
        ]
      }
    },
    "remoteUser": "vscode"
  }
  